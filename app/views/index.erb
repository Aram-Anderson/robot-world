<p>Create a <a href="/robots/new">New Robot</a></p>
<p>Create a <a href="/robots/create">Bunch of Robots</a></p>
<div class="index">
<h1>My Robots</h1>

<% @robots.each do |robot| %>
  <h3><a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
  <img class="image" src="https://robohash.org/<%= robot.name %>.png">
  <p>City</p>
  <h3><%= robot.city %></h3>
  <p>State</p>
  <h3><%= robot.state %></h3>
  <p>Department</p>
  <h3><%= robot.department %></h3>
  <a href="/robots/<%= robot.id %>/edit">Edit</a>
  <form action="/robots/<%= robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
</div>
